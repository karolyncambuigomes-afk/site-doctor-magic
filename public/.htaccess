# Five London - Optimized for External Tools & Performance Analysis
# Maximum compatibility for PageSpeed, GTmetrix, and all crawlers

# Advanced compression for maximum size reduction
<IfModule mod_deflate.c>
    # Text-based content
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    
    # Application content
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    
    # Fonts and SVG
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    
    # Compression level (6 = good balance)
    DeflateCompressionLevel 6
    
    # Don't compress already compressed files
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|webp|zip|gz|tar|bz2|sit|rar|exe)$ no-gzip dont-vary
</IfModule>

# Smart cache control with crawler-friendly settings
<IfModule mod_headers.c>
    # Allow crawlers and performance tools unrestricted access
    <If "%{HTTP_USER_AGENT} =~ /Googlebot|Bingbot|PageSpeed|GTmetrix|Pingdom|WebPageTest|Lighthouse|crawler|bot|spider|facebookexternalhit|WhatsApp|LinkedInBot|slurp|DuckDuckBot/i">
        Header set Cache-Control "public, max-age=86400"
        Header always set X-Robots-Tag "index, follow"
        Header always set X-Debug-Tool "external-analyzer"
        Header always set Access-Control-Allow-Origin "*"
        Header always set X-Mobile-Crawler-Friendly "true"
        Header always set Vary "User-Agent"
    </If>
    
    # Mobile browsers: balanced caching for better performance
    <ElseIf "%{HTTP_USER_AGENT} =~ /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini|Mobile/i">
        Header set Cache-Control "public, max-age=3600"
        Header set Pragma "public"
    </ElseIf>
    
    # Desktop browsers: standard caching
    <Else>
        <FilesMatch "\.(js|css|jpg|jpeg|png|gif|ico|svg|webp)$">
            Header set Cache-Control "public, max-age=86400"
        </FilesMatch>
        <FilesMatch "\.(html|htm)$">
            Header set Cache-Control "public, max-age=3600"
        </FilesMatch>
    </Else>
    
    # Essential security headers - crawler friendly
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Performance hints for crawlers
    Header always set Accept-CH "Viewport-Width, Width"
    
    # Remove server identification but keep ETags for better caching
    Header unset X-Powered-By
    Header unset Server
    
    # Debug headers for external tools
    Header always set X-Site-Status "active"
    Header always set X-Crawler-Friendly "true"
</IfModule>

# Enable basic ETags for better cache validation
FileETag MTime Size

# SPA Routing and Optional HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # HTTPS and WWW redirects disabled for maximum compatibility
    # This ensures the site works in private browsers and internationally
    
    # SPA Routing - Serve index.html for all non-file requests
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/api/
    RewriteCond %{REQUEST_URI} !^/supabase/
    RewriteRule . /index.html [L]
</IfModule>